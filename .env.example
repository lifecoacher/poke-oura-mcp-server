# Oura API Token
OURA_TOKEN=your_oura_api_token_here

# Sleep Score Threshold (below this triggers alert)
SLEEP_SCORE_THRESHOLD=70

# Minimum Total Sleep in Minutes
MIN_TOTAL_SLEEP_MIN=360

# Maximum Sleep Latency in Minutes
MAX_SLEEP_LATENCY_MIN=30

# Poor Nights Streak (consecutive poor nights before alert)
POOR_NIGHTS_STREAK=3

# Timezone (e.g., America/New_York)
TIMEZONE=America/New_York
